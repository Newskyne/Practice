<Page x:Class="Practice.Pages.CategoryEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CategoryEditPage"
      Background="SandyBrown">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Поле ввода имени категории -->
        <Label Content="Имя категории:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox x:Name="CategoryNameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,10,0,10" Padding="5" VerticalContentAlignment="Center"
                 BorderBrush="Gray" BorderThickness="1" Background="White" />

        <!-- Кнопки сохранения и отмены -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="0,0,10,0" Padding="5"  />
            <Button Content="Отмена" Click="CancelButton_Click" Width="100" Padding="5"   />
        </StackPanel>
    </Grid>
</Page>