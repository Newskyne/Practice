<Window x:Class="Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Practice" Height="450" Width="800"
        Background="SandyBrown">
    <DockPanel>
        <!-- Верхнее меню -->
        <Menu DockPanel.Dock="Top"
              Background="SandyBrown">
            <MenuItem Header="Категории" Click="Categories_Click"/>
            <MenuItem Header="Продукция" Click="Products_Click"/>
            <MenuItem Header="Платежи" Click="Payments_Click"/>
            <MenuItem Header="Отчет" Click="Report_Click"/>
        </Menu>
        <!-- Основное содержимое -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>